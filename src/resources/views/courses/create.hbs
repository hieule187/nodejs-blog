<div class='content'>
  <h3>Đăng Khóa Học</h3>

  <form class='mt-4' method='POST' action='/courses/store'>
    <div class='form-group'>
      <label for='name'>Tên khóa học</label>
      <input type='text' class='form-control' id='name' name='name' />
    </div>
    <div class='form-group'>
      <label for='description'>Mô tả</label>
      <textarea class='form-control' id='description' name='description'>
      </textarea>
    </div>
    <div class='form-group'>
      <label for='videoId'>ID video</label>
      <input type='text' class='form-control' id='videoId' name='videoId' />
    </div>
    <div class='form-group'>
      <label for='level'>Mức độ</label>
      <input type='text' class='form-control' id='level' name='level' />
    </div>

    <button type='submit' class='btn btn-primary'>Thêm khóa học</button>
  </form>
</div>